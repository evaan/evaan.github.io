---
import '@fontsource/inter'
import Snowflake from '../components/Snowflake.astro';

interface Props {
    title: string;
}
const { title } = Astro.props 
---

<html lang="en">
    <head>
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta charset="utf-8" />
        <link rel="icon" href="https://avatars.githubusercontent.com/u/41494790?v=4">
        <style is:global>
            @tailwind base;
            @tailwind components;
            @tailwind utilities;

            @layer base {
                body {
                    @apply bg-neutral-800;
                    @apply text-neutral-200;
                    @apply font-inter;
                }
                a {
                    @apply text-blue-300;
                }
                a:hover {
                    @apply bg-blue-300;
                    @apply text-neutral-800;
                }
                a:active {
                    @apply bg-blue-300;
                    @apply text-neutral-800;
                }
            }
            @layer utilities {
                .no-scrollbar::-webkit-scrollbar {
                    display: none;
                }
                .no-scrollbar {
                    -ms-overflow-style: none;
                    scrollbar-width: none;
                }
            }

            * {
                font-variant-ligatures: none;
            }
        </style>
    </head>
    <body>
        <Snowflake></Snowflake>
        <div class="flex justify-center">
            <div class="w-4/5 lg:w-3/5 h-screen">
                <div class="flex mobile-only:flex-col non-mobile::flex-row gap-x-8 lg:gap-x-16 w-full justify-center items-center mt-2">
                    <a class="group flex items-center hover:bg-neutral-200 active:bg-neutral-200 mt-2" href="/">
                        <p class="mobile-only:text-4xl text-2xl text-center text-neutral-200 group-hover:text-neutral-800 group-active:text-neutral-800">evan whelan</p>
                    </a>
                    <div class="flex gap-x-8 lg:gap-x-16 items-center justify-center h-full mt-2">
                        <a class="group flex hover:bg-neutral-200 active:bg-neutral-200" href="/projects">
                            <p class="text-2xl text-center text-neutral-200 group-hover:text-neutral-800 group-active:text-neutral-800">projects</p>
                        </a>
                        <a class="group flex items-center hover:bg-neutral-200 active:bg-neutral-200" href="/posts">
                            <p class="text-2xl text-center text-neutral-200 group-hover:text-neutral-800 group-active:text-neutral-800">blog</p>
                        </a>
                        <a class="group flex items-center hover:bg-neutral-200 active:bg-neutral-200" href="/interests">
                            <p class="text-2xl text-center text-neutral-200 group-hover:text-neutral-800 group-active:text-neutral-800">interests</p>
                        </a>
                    </div>
                </div>
                <div class="w-full pb-2">
                    <slot />
                </div>
            </div>
        </div>
    </body>
</html>